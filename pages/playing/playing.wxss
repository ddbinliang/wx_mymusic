/**index.wxss**/
.main-wrap{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  overflow:hidden;
}
.songBg{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background-position:center;
  background-size:cover;
  filter:blur(30rpx);
  transform:scale(2);
  height:100%;
  width:100%;
}
.songBg .songBgImg{
  width:100%;
  height:100%;
  display:inline-block;
  overflow:hidden;
}
.main{
	position: absolute;
	bottom: 0;
	top: 0;
	width: 100%;
	z-index: 2;
	overflow: hidden;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.songBar{
  text-align: center;
  color: #ffffff;
}
.songName{
  padding-top: 6px;
  font-size: 18px;
}
.singer{
  margin-top: 2px;
  font-size: 12px;
}
.songPic{
  flex: auto;
	display: flex;
	align-items: center;
	justify-content: center;
  padding-top: 160rpx;
}
.songPic .img{
	width: 400rpx;
	height: 400rpx;
	border-radius: 50%;
	animation: rotate 10s linear infinite;
}
@keyframes rotate{
  from{transform:rotate(0deg)}
  to{transform:rotate(360deg)}
}
.songPic .pause{
	animation-play-state: paused;
}
/*时间条*/
.songTimeBar{
  padding-bottom: 160rpx;
}
.songTimeBar .progressBar{
	height: 80rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
  color: #fff;
}
.progressBar .timeBar{
	position: relative;
	flex: auto;
	height: 4rpx;
	overflow: hidden;
	background: #cfced1;
}
.progressBar .timeBar .playTime{
	position: absolute;
	left: -100%;
	width: 100%;
	height: 100%;
	background: #31c27c;
	transition: all 1s linear;
}
.progressBar .startTime,
.progressBar .totalTime{
	flex: none;
	/*color: #808080;*/
	width: 110rpx;
	text-align: center;
	font-size: 24rpx;
}
/*上下曲 控制*/
.songControl{
  position: absolute;
  bottom: 0;
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.songControl .songPrev,
.songControl .songNext{
  width: 80rpx;
  height: 80rpx;
}
.songControl .songPlay{
  margin: 0 20rpx;
  width: 98rpx;
  height: 98rpx;
}